		double azote;
		double min;													
		double moy;	
		double max;	
		if (this.dateDuJour.getSaison() == 0){								// 0 == Froide et sèche
				if (jourNuit() == true){							// true == jour
				min = 4.17 ;
				moy = 4.35;
				max = 4.66;
				}else{													// false == nuit
				min = 4.17;
				moy = 4.35;
				max = 4.66;
				}
		}else if (this.dateDuJour.getSaison() == 1){							// 1 == Chaude et sèche
			min = 5.15;
			moy = 5.39;
			max = 5.64;
		}else{												// getSaison == 2 et 2 == Chaude et hummide
			min = 4.17;
			moy = 4.56;
			max = 5.15;
		}
		azote =  generate(min, max, moy);
		return azote;
	}

	public double LAutre (){
		double autre;
		double min;													
		double moy;	
		double max;	
		if (this.dateDuJour.getSaison() == 0){								// 0 == Froide et sèche
				if (jourNuit() == true){							// true == jour
				min = 4.17 ;
				moy = 4.35;
				max = 4.66;
				}else{													// false == nuit
				min = 4.17;
				moy = 4.35;
				max = 4.66;
				}
		}else if (this.dateDuJour.getSaison() == 1){							// 1 == Chaude et sèche
			min = 5.15;
			moy = 5.39;
			max = 5.64;
		}else{												// getSaison == 2 et 2 == Chaude et hummide
			min = 4.17;
			moy = 4.56;
			max = 5.15;
		}
		autre = generate(min, max, moy);
		return autre;
	}

}
